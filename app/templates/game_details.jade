.well
    ol.breadcrumb
        li: a(href="#") En cours
        li.active: <%= txtField %>

    .num-play
        ul.pagination
            li: a(href="#") &laquo;
            li: a(href="#") <span class="badge">Échange <%= numPlay %></span>
            li: a(href="#") &raquo;
    br
    ul.list-group
        li.list-group-item.active
            span.badge <%= txtScore1 %>
            | <% if(isDouble) { %>
            h4.list-group-item-heading
                span.text-info Equipe A
            | <% }; %>
            p.list-group-item-text
                | <% if(isDouble) { %>
                |     <%= txtPlayerA1 %> <%= flagService[0] %><%= flagReception[0] %><br/>
                |     <%= txtPlayerA2 %> <%= flagService[1] %><%= flagReception[1] %><br/>
                | <% } else { %>
                span.text-info.one-player  <%= txtPlayer1 %> <%= flagService[0] %> <%= flagReception[0] %><br/>
                | <% }; %>
        li.list-group-item.active
            span.badge <%= txtScore2 %>
            | <% if(isDouble) { %>
            h4.list-group-item-heading
                span.text-danger Equipe B
            | <% }; %>
            p.list-group-item-text
                | <% if(isDouble) { %>
                |     <%= txtPlayerB1 %> <%= flagService[2] %><%= flagReception[2] %><br/>
                |     <%= txtPlayerB2 %> <%= flagService[3] %><%= flagReception[3] %><br/>
                | <% } else { %>
                span.text-danger.one-player  <%= txtPlayer2 %> <%= flagService[1] %> <%= flagReception[1] %><br/>
                | <% }; %>
    br
    //hr
    .row
        .col-xs-6
            button.btn.btn-lg.btn-info.btn-block
                | <% if(isDouble) { %>
