// _new_game_home.jade

.well
    form.form-horizontal(role="form")
        fieldset
            legend Terrain
            .form-group
                label.col-sm-2.control-label Arbitre
                .col-sm-5
                    input#refereeFirstname.form-control(type="text", placeholder="Prénom")
                .col-sm-5
                    input#refereeSurname.form-control(type="text", placeholder="Nom")
            .form-group
                label.col-sm-2.control-label Terrain
                .col-sm-10
                    input#gameField.form-control(type="text", placeholder="Terrain")
            .form-group
                label.col-sm-2.control-label Catégorie
                .col-sm-10
                    .radio
                        label
                            input.radPlayerCount(type="radio", name="radPlayerCount", value="simple")
                            | Jeu Simple
                    .radio
                        label
                            input.radPlayerCount(type="radio", name="radPlayerCount", value="double")
                            | Jeu Double

        // -- SIMPLE ----------------------------------------------------------
        fieldset.new_game_simple(style="display:none")
            legend Joueurs
            .form-group
                label.col-sm-2.control-label Joueur 1
                .col-sm-5
                    input#player1Firstname.form-control(type="text", placeholder="Joueur 1 - Prénom")
                .col-sm-5
                    input#player1Surname.form-control(type="text", placeholder="Joueur 1 - Nom")
            .form-group
                label.col-sm-2.control-label Joueur 2
                .col-sm-5
                    input#player2Firstname.form-control(type="text", placeholder="Joueur 2 - Prénom")
                .col-sm-5
                    input#player2Surname.form-control(type="text", placeholder="Joueur 2 - Nom")

        // -- DOUBLE ----------------------------------------------------------
        fieldset.new_game_double(style="display:none")
            legend Equipe A
            .form-group
                label.col-sm-2.control-label Joueur 1
                .col-sm-5
                    input#playerA1Firstname.form-control(type="text", placeholder="Joueur 1 - Prénom")
                .col-sm-5
                    input#playerA1Surname.form-control(type="text", placeholder="Joueur 1 - Nom")
            .form-group
                label.col-sm-2.control-label Joueur 2
                .col-sm-5
                    input#playerA2Firstname.form-control(type="text", placeholder="Joueur 2 - Prénom")
                .col-sm-5
                    input#playerA2Surname.form-control(type="text", placeholder="Joueur 2 - Nom")

        fieldset.new_game_double(style="display:none")
            legend Equipe B
            .form-group
                label.col-sm-2.control-label Joueur 1
                .col-sm-5
                    input#playerB1Firstname.form-control(type="text", placeholder="Joueur 1 - Prénom")
                .col-sm-5
                    input#playerB1Surname.form-control(type="text", placeholder="Joueur 1 - Nom")
            .form-group
                label.col-sm-2.control-label Joueur 2
                .col-sm-5
                    input#playerB2Firstname.form-control(type="text", placeholder="Joueur 2 - Prénom")
                .col-sm-5
                    input#playerB2Surname.form-control(type="text", placeholder="Joueur 2 - Nom")

            // -- CONTINUE ----------------------------------------------------
        //fieldset
            .col-sm-10.col-sm-offset-2
        .form-group
            .col-sm-12
                hr
                button#btnNewGameFirst.btn.btn-primary.btn-lg.btn-block(type="button", disabled="disabled") Continuer

#newGameConfirm.modal.fade
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type="button", data-dismiss="modal", aria-hidden="true") 
                    span.text-muted &times;
                h4.modal-title Service et Réception
            .modal-body
                .well
                    form.form-horizontal(role="form")
                        .form-group
                            label.col-sm-2.control-label Service
                            .col-sm-10
                                select#servicePlayer.form-control
                        #newGameFormReceiver.form-group(style="display:none")
                            label.col-sm-2.control-label Réception
                            .col-sm-10
                                select#receiverPlayer.form-control
            .modal-footer
                button.btn.btn-default(type="button", data-dismiss="modal") Annuler
                button#btnNewGameSecond.btn.btn-primary(type="button") Sauvegarder
