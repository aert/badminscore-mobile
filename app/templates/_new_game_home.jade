            input(type="text", placeholder="Joueur 2 - Prénom")
            button.btn-clear(tabindex="-1")
        .input-control.text.size2(data-role="input-control")
            input(type="text", placeholder="Joueur 2 - Nom")
            button.btn-clear(tabindex="-1")

        h4 Equipe B
        label Joueur 1
        .input-control.text.size2(data-role="input-control")
            input(type="text", placeholder="Joueur 1 - Prénom")
            button.btn-clear(tabindex="-1")
        .input-control.text.size2(data-role="input-control")
            input(type="text", placeholder="Joueur 1 - Nom")
            button.btn-clear(tabindex="-1")
        label Joueur 2
        .input-control.text.size2(data-role="input-control")
            input(type="text", placeholder="Joueur 2 - Prénom")
