form
    fieldset
        legend Arbitres et terrain
        label Arbitre
        .input-control.text.size4(data-role="input-control")
            input(type="text", placeholder="Arbitre")
            button.btn-clear(tabindex="-1")
        label Terrain
        .input-control.text.size4(data-role="input-control")
            input(type="text", placeholder="Terrain")
            button.btn-clear(tabindex="-1")

    br
    fieldset
        legend Joueurs
        div
            .input-control.radio(data-role="input-control")
                label
                    input(type="radio", name="radPlayerCount")
                    span.check
                    | Jeu Simple
            .input-control.radio(data-role="input-control")
                label
                    input(type="radio", name="radPlayerCount", checked)
                    span.check
                    | Jeu Double
        h4 Equipe A
        label Joueur 1
        .input-control.text.size2(data-role="input-control")
            input(type="text", placeholder="Joueur 1 - Prénom")
            button.btn-clear(tabindex="-1")
        .input-control.text.size2(data-role="input-control")
            input(type="text", placeholder="Joueur 1 - Nom")
            button.btn-clear(tabindex="-1")
        label Joueur 2
